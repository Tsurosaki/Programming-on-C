#include <stdlib.h>
#include <string.h>

#define MIN_NUMBERS 100

#define MIN_IN_ARRAY(arr, count) ({        \
    int min_val = (count) > 0 ? (arr)[0] : 0;  \
    for (int i = 1; i < (count); ++i) {   \
        if ((arr)[i] < min_val)            \
            min_val = (arr)[i];            \
    }                                     \
    min_val;                              \
})

#define AVERAGE(arr, count) ((count) == 0 ? 0 : ({ \
    double sum = 0; \
    for (int i = 0; i < (count); ++i) { \
        sum += (arr)[i]; \
    } \
    sum / (count); \
}))

int main() {
    char input[1024];
    int numbers[MIN_NUMBERS];
    int count = 0;

    printf("Введите числа через пробел: ");
    if (!fgets(input, sizeof(input), stdin)) {
        printf("Ошибка чтения строки.\n");
        return 1;
    }
    input[strcspn(input, "\n")] = 0;

    char *token = strtok(input, " ");
    while (token != NULL && count < MIN_NUMBERS) {
        numbers[count++] = atoi(token);
        token = strtok(NULL, " ");
    }
    if (count == 0) {
        printf("Числа не введены.\n");
        return 1;
    }

    int min_value = MIN_IN_ARRAY(numbers, count);
    double avg_value = AVERAGE(numbers, count);
    
    printf("Максимальное число: %d\n", min_value);
    printf("Среднее арифметическое: %.2f\n", avg_value);

    return 0;
}
